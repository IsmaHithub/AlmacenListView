<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.isma.mispruebas.ActivityListViewPersonalizado"
    android:background="#717171">

    <ListView

        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:id="@+id/activitylistviewpersonalizadomylistview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff8f8c"
        android:choiceMode="none" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activitylistviewpersonalizadomylistview"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:id="@+id/alvpersonalizadobcerrar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</RelativeLayout>
